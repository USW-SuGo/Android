<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvcardview"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eee">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="#fff"
                    android:layout_marginBottom="1dp">

                    <ImageView

                        android:id="@+id/dealimageLnk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_launcher_background" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:rowCount="1">
                    <TextView
                        android:gravity="center"
                        android:fontFamily="@font/pretendardbold"
                        android:textSize="12dp"
                        android:layout_columnWeight="1"
                        android:id="@+id/dealrvplace"
                        android:text="장소"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/dealDatetime"
                        android:fontFamily="@font/pretendardbold"
                        android:textSize="12dp"
                        android:layout_columnWeight="1"
                        android:text="시간"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/dealCategory"
                        android:fontFamily="@font/pretendardbold"
                        android:textSize="12dp"
                        android:layout_columnWeight="1"
                        android:text="카테고리"
                        tools:ignore="GridLayout" />

                </GridLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ddd">

                <RelativeLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:layout_marginBottom="1dp">

                    <TextView
                        android:id="@+id/dealrvtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="8"
                        android:text="제목"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent" />
                </RelativeLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:gravity="left"
                    android:fontFamily="@font/pretendardbold"
                    android:id="@+id/dealNickname"
                    android:layout_width="102dp"
                    android:layout_height="32dp"
                    android:text="nickname"
                    android:textColor="@color/ef_grey"
                    android:textSize="10dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:fontFamily="@font/pretendardbold"
                    android:id="@+id/dealrvprice"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="가격"
                    android:textColor="@color/sugreen"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="8dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
</RelativeLayout>